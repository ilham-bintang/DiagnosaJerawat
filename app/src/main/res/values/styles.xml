<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/blueBackgroundDarker</item>
    </style>

    <style name="generalnotitle" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/blueBackground</item>
        <item name="android:windowBackground">@color/blueBackground</item>
        <item name="android:colorBackground">@color/blueBackground</item>
    </style>

</resources>
